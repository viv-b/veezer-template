
{% assign this_base_url = site.base_url | remove: "https://" |  remove_last: "/" %}
{%- comment %} 
Determine Focal Point values for the transformation URL of imagekit.
Currently NOT USED (use object-fit instead). To use as a parameter: e.g. '&a=bottom-right'.
{% endcomment %}
{%- if rs_focal_point %}
    {%- case rs_focal_point %}
        {%- when "center top" %}
            {%- assign fo_value = "top" %}
        {%- when "center center" %}
            {%- assign fo_value = "center" %}
        {%- when "center bottom" %}
            {%- assign fo_value = "bottom" %}
        {%- when "left top" %}
            {%- assign fo_value = "top-left" %}
        {%- when "left center" %}
            {%- assign fo_value = "left" %}
        {%- when "left bottom" %}
            {%- assign fo_value = "bottom-left" %}
        {%- when "right top" %}
            {%- assign fo_value = "top-right" %}
        {%- when "right center" %}
            {%- assign fo_value = "right" %}
        {%- when "right bottom" %}
            {%- assign fo_value = "bottom-right" %}
    {%- endcase %}
{%- endif %}
<img {% if rs_lazy != false %}loading="lazy"{% endif %} alt="{{ rs_title }}" title="{{ rs_title }}" width="{{ rs_width }}" height="{{ rs_height }}" style="{% if rs_focal_point %}object-position: {{ rs_focal_point }};{% endif %}" {% if rs_class %}class="{{ rs_class }}"{% endif %} {% if rs_custom_attribute_text %}{{ rs_custom_attribute_text }}{% endif %}
    src="//wsrv.nl/?url={{ this_base_url }}{{ rs_image }}&h={{ rs_height }}&w={{ rs_width }}&fit=cover{% if rs_quality %}&q={{ rs_quality }}{% endif %}{% if fo_value %}&a={{ fo_value }}{% endif %}"
    srcset="//wsrv.nl/?url={{ this_base_url }}{{ rs_image }}&h={{ rs_very_small_height }}&w={{ rs_very_small_width }}&fit=cover{% if rs_quality %}&q={{ rs_quality }}{% endif %}{% if fo_value %}&a={{ fo_value }}{% endif %} 500w,
            //wsrv.nl/?url={{ this_base_url }}{{ rs_image }}&h={{ rs_small_height }}&w={{ rs_small_width }}&fit=cover{% if rs_quality %}&q={{ rs_quality }}{% endif %}{% if fo_value %}&a={{ fo_value }}{% endif %} 768w,
            //wsrv.nl/?url={{ this_base_url }}{{ rs_image }}&h={{ rs_medium_height }}&w={{ rs_medium_width }}&fit=cover{% if rs_quality %}&q={{ rs_quality }}{% endif %}{% if fo_value %}&a={{ fo_value }}{% endif %} 1023w,
            //wsrv.nl/?url={{ this_base_url }}{{ rs_image }}&h={{ rs_large_height }}&w={{ rs_large_width }}&fit=cover{% if rs_quality %}&q={{ rs_quality }}{% endif %}{% if fo_value %}&a={{ fo_value }}{% endif %} 1407w{%- if rs_width > 1407 %},
