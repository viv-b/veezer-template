<div class="{% if number_posts > 2 %}pl-3 pr-3{% endif %}">
                           
    <div class="content gsap-element-wrapper print-full-width" data-gsap-animation-name="slide-down-from-top" data-gsap-delay="0.4">
                  
        <div class="blog-post-thumb" {% if number_posts < 3 %}style="max-width: 450px;"{% endif %}>
          
            {%- if blog.data.blog_feature_image %}{% assign current_image = blog.data.blog_feature_image %}{% else %}{% assign current_image = site.placeholder_image %}{% endif %}

            {%- bookshop_include "resize-image" live_render: false rs_lazy: true rs_image: current_image rs_title: blog.data.title rs_quality: "70" rs_width: "400" rs_height: "400" %}
            
        </div>
                    
    </div>
                         
    <div class="content gsap-element-wrapper print-full-width" data-gsap-animation-name="slide-up-from-bottom">
                  
        <div class="blog-post-details">
          
           <h3 class="blog-post-title">
              {{ blog.data.title }}
           </h3>
           
           <p style="font-size: 0.9rem;"><em>Posted: {{ blog.date | datePost }}</em></p>
           
           <div class="blog-post-excerpt">
              <p>{{ blog.data.excerpt | truncatewords: 20 }}</p>
              <p><a href="{{ blog.url }}" class="button">Read More</a></p>
           </div>
           
        </div>
                   
    </div>
                
</div>    